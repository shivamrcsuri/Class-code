# 11. 
import turtle
wn = turtle.Screen()
wn.bgcolor("light green")
alex = turtle.Turtle()
alex.shape("turtle")
alex.fillcolor("blue")


alex.penup()
for i in range(12):
    alex.forward(100)
    alex.stamp()
    alex.backward(100)
    alex.left(30)

wn.mainloop()

# 12. 1. 
List = [1,2,3,4,5,6,7,8] 
  
listCount = 0
for num in List:  
    if num % 2 == 1: 
       listCount += 1
          
print("The number of odd numbers in the list are " + str(listCount))

