# 12.12. 
n = int(input("Enter a positive integer:"))
digits = 0
while n > 0:
    digits += 1
    n = n/10
if n < 0:
   print("Invalid input")
if n == 0:
   print("The number has 1 digit")
print("The number has " + str(digits) + " digit/(s)")


# 12.13. 
n = int(input("Enter a positive integer:"))
count = 0
while n > 0:
      remainder = n % 10
      if remainder % 2 == 0:
         count += 1
      n = int(n/10)
print(count)






# 12.14. 
def square_sum(List):
  Sum = 0
  for i in List:
      square_num = i ** 2
      Sum = Sum + square_num
  print(Sum)

# Test cases
print(square_sum([3,4,5]))
print(square_sum([1,2,3,4]))
       
  

