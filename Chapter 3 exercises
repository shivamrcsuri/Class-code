# 12.9. 
def prime_number(n):
    factors = []
    for i in range(1, n+1):
        if n % i == 0:
           factors = i
           print(factors)
           if factors == [1,n] or factors == [n,1]:
              print("True")
           else:
              print("False")
print(prime_number(12))   

