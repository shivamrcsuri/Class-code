# 10. 5. 1. 
import turtle
wn = turtle.Screen()
alex = turtle.Turtle()


alex.forward(100)
alex.left(120)
alex.forward(100)
alex.left(120)
alex.forward(100)

# 10.5.2. 
import turtle
wn = turtle.Screen()
wn.bgcolor("blue")
alex = turtle.Turtle()
alex.fillcolor("green")
alex.color("red")


alex.forward(60)
alex.left(90)
alex.forward(60)
alex.left(90)
alex.forward(60)
alex.left(90)
alex.forward(60)


# 10.5.3.
import turtle
wn = turtle.Screen()
wn.bgcolor("blue")
alex = turtle.Turtle()
alex.fillcolor("green")
alex.color("red")


alex.forward(60)
alex.left(50)
alex.forward(60)
alex.left(75)
alex.forward(60)
alex.left(55)
alex.forward(60)
alex.left(60)
alex.forward(60)
alex.left(61)
alex.forward(60)
wn.mainloop()


