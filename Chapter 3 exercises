return_day = day + (length_of_stay % 7)

if length_of_stay > 150:
   new_Answer = (length_of_stay % 150) 
if length_of_stay % 150 == 0:
   print((length_of_stay % 150) + 3)
print(new_Answer)
if return_day == 0:
   print("Sunday")
